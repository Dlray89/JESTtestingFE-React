

type Project {
    id: ID! @id @unique
    projectName: String!
    description: String!
    tasks: [Task!]! @relations(name: "taskByProject")
}

type CheckList {
    id: ID! @id @unique
    itemName: String!
    completed: Boolean!
}

type Task {
    id: ID! @id
    taskName: String!
    taskDetails: String!
    project: Project! @relations(name:"taskByProject")
    completed: Boolean!
}

type JournalEntries {
    id: ID! @id
    createdAt: DateTime @createdAt
    entryName: String!
    entryDetails: String!
}

type Label {
    id: ID! @id
    labelName: String!
}